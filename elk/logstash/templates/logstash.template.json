{
  "template": "*-logs-*",
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1
  },
  "mappings": {
    "properties": {
      "@timestamp": { "type": "date" },
      "@version": { "type": "keyword" },
      "message": { "type": "text" },
      "type": { "type": "keyword" },
      "service": { "type": "keyword" },
      "level": { "type": "keyword" },
      "host": { "type": "keyword" },
      "path": { "type": "keyword" },
      "line_number": { "type": "integer" },
      "function": { "type": "keyword" },
      "environment": { "type": "keyword" },
      "exception": { "type": "text" }
    }
  }
}
